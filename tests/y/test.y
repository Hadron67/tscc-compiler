    ESCAPE_CHAR = < "\\" (['n', 't', '"', "'", "\\"] | <UNICODE>) >
    UNICODE = < ['x', 'u'] <HEX> ( <HEX> )?  >

    < ["\n", "\t", " ", "\r"]+ >
    < "/*" ([^"*", "/"]|[^"*"]"/"|"*"[^"/"])* "*/" >
    < "//" [^"\n"]* >

    < TEST: '"' ([^"\n", '"', '\\'] | <ESCAPE_CHAR>)* '"' >
]


